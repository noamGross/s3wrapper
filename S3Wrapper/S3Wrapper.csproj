<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>S3Wrapper</PackageId>
    <Version>1.0.0</Version>
    <Authors>Your Name</Authors>
    <Description>A .NET 8 wrapper for S3-compatible storage (AWS S3 and MinIO) that provides simple methods for reading and writing files and objects.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/yourusername/S3Wrapper</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yourusername/S3Wrapper.git</RepositoryUrl>
    <PackageTags>S3, MinIO, Storage, AWS, .NET</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.S3" Version="3.7.305.16" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
  </ItemGroup>

</Project> 